{
  "name": "image-details",
  "displayName": "Image Details",
  "description": "View comprehensive image metadata with EXIF data, zoom controls, and multi-language support",
  "version": "0.1.0",
  "publisher": "NeuronioAzul",
  "author": {
    "name": "NeuronioAzul"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeuronioAzul/vscode-ext_img-details"
  },
  "bugs": {
    "url": "https://github.com/NeuronioAzul/vscode-ext_img-details/issues"
  },
  "homepage": "https://github.com/NeuronioAzul/vscode-ext_img-details#readme",
  "keywords": [
    "image",
    "metadata",
    "exif",
    "photo",
    "viewer",
    "details",
    "inspector",
    "jpeg",
    "png",
    "gif",
    "webp"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "imageDetails.viewer",
        "displayName": "Image Details Viewer",
        "selector": [
          {
            "filenamePattern": "*.png"
          },
          {
            "filenamePattern": "*.jpg"
          },
          {
            "filenamePattern": "*.jpeg"
          },
          {
            "filenamePattern": "*.gif"
          },
          {
            "filenamePattern": "*.bmp"
          },
          {
            "filenamePattern": "*.webp"
          },
          {
            "filenamePattern": "*.svg"
          },
          {
            "filenamePattern": "*.ico"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "imageDetails.openWith",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|webp|svg|ico)$/i",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "imageDetails.openWith",
        "title": "Open with Image Details Viewer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "exifreader": "^4.32.0",
    "image-size": "^1.1.1"
  }
}
