{
  "name": "image-details",
  "icon": "icon.png",
  "displayName": "Image Details",
  "description": "View image metadata with EXIF data, and clean Metadata from images",
  "version": "0.2.0",
  "publisher": "NeuronioAzul",
  "author": {
    "name": "NeuronioAzul"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeuronioAzul/vscode-ext_img-details"
  },
  "bugs": {
    "url": "https://github.com/NeuronioAzul/vscode-ext_img-details/issues"
  },
  "homepage": "https://github.com/NeuronioAzul/vscode-ext_img-details#readme",
  "keywords": [
    "image",
    "metadata",
    "exif",
    "photo",
    "viewer",
    "details",
    "inspector",
    "jpeg",
    "png",
    "gif",
    "webp"
  ],
  "tags": [
    "image",
    "Preview",
    "Visualization",
    "Formatters",
    "metadata",
    "exif",
    "photo",
    "viewer",
    "details",
    "inspector",
    "jpeg",
    "bmp",
    "tiff",
    "png",
    "gif",
    "webp",
    "svg",
    "ico",
    "image-size"
  ],
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Visualization",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "imageDetails.viewer",
        "displayName": "Image Details Viewer",
        "selector": [
          {
            "filenamePattern": "*.png"
          },
          {
            "filenamePattern": "*.jpg"
          },
          {
            "filenamePattern": "*.jpeg"
          },
          {
            "filenamePattern": "*.gif"
          },
          {
            "filenamePattern": "*.bmp"
          },
          {
            "filenamePattern": "*.webp"
          },
          {
            "filenamePattern": "*.svg"
          },
          {
            "filenamePattern": "*.ico"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "imageDetails.openWith",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|webp|svg|ico)$/i",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "imageDetails.openWith",
        "title": "Open with Image Details Viewer"
      }
    ],
    "configuration": {
      "title": "Image Details",
      "properties": {
        "imageDetails.defaultDisplayMode": {
          "type": "string",
          "enum": [
            "accordion",
            "list"
          ],
          "enumDescriptions": [
            "Collapsible sections (accordion mode)",
            "Simple list with all sections always visible"
          ],
          "default": "accordion",
          "description": "Default display mode for metadata sections"
        },
        "imageDetails.defaultSectionStates": {
          "type": "object",
          "properties": {
            "basicInfo": {
              "type": "boolean",
              "default": true,
              "description": "Basic Information section expanded by default"
            },
            "colorInfo": {
              "type": "boolean",
              "default": false,
              "description": "Color Information section expanded by default"
            },
            "exifData": {
              "type": "boolean",
              "default": false,
              "description": "EXIF Data section expanded by default"
            }
          },
          "default": {
            "basicInfo": true,
            "colorInfo": false,
            "exifData": false
          },
          "description": "Default state for each metadata section (expanded/collapsed)"
        },
        "imageDetails.rememberSectionStates": {
          "type": "boolean",
          "default": true,
          "description": "Remember section states (expanded/collapsed) between sessions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "exifreader": "^4.32.0",
    "image-size": "^1.1.1"
  }
}
